body>header
  background-color #FFF
  .wrapper
    width 1024px
    margin 0 auto
    height 96px
    overflow hidden
    h1
      height 96px
      width 304px
      background url("../images/logotype/header-logotype.png") 16px 50% no-repeat
      overflow hidden
      text-indent -9999px
      float left
    .contacts
      position relative
      float right
      width 440px
      color #00316f
      padding 25px 12px 0 0
      font-size 23px
      font-family 'Plumb Medium', Helvetica, Arial, sans-serif
      &.clicked
        a b
          opacity 1 
      .title
        display inline-block
        vertical-align top
        margin-right 32px
      .blocker
        cursor pointer
        position absolute
        right 0
        top 0
        bottom 0
        left 0
        padding 26px 0 0 370px
        font-size 10px
        z-index 20
        background-color rgba(255,255,255,0)
      a
        text-decoration none
        color #808285
        display inline-block
        vertical-align top
        width 160px
        b
          opacity 0
          transition opacity .5s
        span
          font-family 'Plumb Regular', Helvetica, Arial, sans-serif
          display block
          font-size 10px
          line-height 12px
  