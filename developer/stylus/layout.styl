html
  font-family "Plumb Regular", Helvetica, Arial, sans-serif
  body
    overflow-x hidden
  img
    max-height 100%
    max-width 100%
    
.back-to-top
  position fixed
  bottom 32px
  left -9999px
  display block
  width 144px
  height 144px
  line-height 130px
  text-align center
  border-radius 100%
  background-color #5a7394
  color #fff 
  opacity 0
  z-index 100
  font-size 48px
  cursor pointer
  transition opacity .25s ease
  pointer-events none
  text-decoration none
  &.visible
    pointer-events all
    left auto
    right 32px
    display block
    opacity .3
  &:hover,
  &:focus
    opacity .6
    
